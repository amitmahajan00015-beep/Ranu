from fastapi import FastAPI
from fastapi.staticfiles import StaticFiles
from fastapi.responses import FileResponse
import openai
import os

app = FastAPI()

openai.api_key = os.getenv("OPENAI_API_KEY")

app.mount("/static", StaticFiles(directory="static"), name="static")

@app.get("/")
def home():
    return FileResponse("static/index.html")

@app.post("/chat")
async def chat(data: dict):
    response = openai.ChatCompletion.create(
        model="gpt-4o-mini",
        messages=[
            {"role": "system", "content": "You are Ranu, a calm, kind, human-like AI companion."},
            {"role": "user", "content": data["message"]}
        ]
    )
    return {"reply": response.choices[0].message.content}
<!DOCTYPE html>
<html>
<head>
  <title>Ranu</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body {
      background:#0f172a;
      color:white;
      font-family:sans-serif;
      display:flex;
      flex-direction:column;
      height:100vh;
      justify-content:center;
      align-items:center;
      padding:20px;
    }
    #chat { width:100%; max-width:400px; overflow:auto; }
    input, button {
      padding:12px;
      margin-top:10px;
      width:100%;
      border-radius:10px;
      border:none;
    }
    button { background:#7c3aed; color:white; }
  </style>
</head>
<body>

<h2>Ranu</h2>
<div id="chat"></div>

<input id="msg" placeholder="Talk to Ranu..." />
<button onclick="send()">Send</button>

<script>
async function send() {
  const msg = document.getElementById("msg").value;
  if(!msg) return;
  document.getElementById("chat").innerHTML += `<p><b>You:</b> ${msg}</p>`;
  document.getElementById("msg").value = "";
  const res = await fetch("/chat", {
    method:"POST",
    headers:{ "Content-Type":"application/json" },
    body:JSON.stringify({ message: msg })
  });
  const data = await res.json();
  document.getElementById("chat").innerHTML += `<p><b>Ranu:</b> ${data.reply}</p>`;
}
</script>

</body>
</html>
